<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context=".MuridActivity">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bg"/>

        <TextView
            android:id="@+id/txtNamaKelasMurid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:text="Rekayasa Perangkat Lunak"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txtNamaTingkatanMurid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="78dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:text="Kelas XII" />

        <TextView
            android:id="@+id/txtJumlahSiswaMurid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="104dp"
            android:text="Jumlah Siswa 40"
            android:textColor="@color/black"
            android:textSize="18dp" />


        <ImageView
            android:layout_marginTop="40dp"
            android:id="@+id/imageViewMurid"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:src="@drawable/school" />

    </FrameLayout>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listDataMurid"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/addBtnMurid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_add_black_24dp"
            fab:fab_colorNormal="@color/red"
            fab:fab_colorPressed="@color/black"
            fab:fab_colorRipple="@color/putih"/>

    </FrameLayout>


</LinearLayout>